$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
    Anchor: (Width: 1200, Height: 900);

    #Title{

        Group {
            Background: "../icon.png";
            Anchor: (Left: 10, Height:25, Width:25);
        }

        $C.@Title{
            @Text = "HyFe-Chats";
        }
    }

    Group {
        LayoutMode: Top;
        Anchor: (Top: 37);
        Padding: (Full: 8, Top: 0);

        Group #Buttons {
            LayoutMode: Right;
            Anchor: (Left: -1, Right: -1, Height: 55);
            Padding: (Top: 5, Bottom: 3);

            Button #CreateChat {
                LayoutMode: Top;
                Anchor: (Width: 200);
                Padding: (Full: 10);
                Style: ButtonStyle(
                    Sounds: $C.@ButtonSounds,
                    Hovered: (Background: #263047(0.8))
                );
                Background: #263047;
                OutlineColor: #424a5e;
                OutlineSize: 2;

                Label {
                    FlexWeight: 1;
                    Style: (
                        FontSize: 22,
                        TextColor: #96a9be,
                        HorizontalAlignment: Center,
                        VerticalAlignment: Center,
                        RenderBold: true
                    );
                    Text: "Create Chat";
                }
            }
        }

        Group #Content {
            LayoutMode: Left;
            FlexWeight: 1;

            Group {
                Anchor: (Width: 300);
                LayoutMode: Top;

                Button {
                    LayoutMode: Top;
                    Anchor: (Height: 30);
                    Background: #203551;

                    Label {
                        FlexWeight: 1;
                        Text: "Your Chats";
                        Style: (
                            FontSize: 22,
                            TextColor: #96a9be,
                            HorizontalAlignment: Center,
                            RenderBold: true
                        );
                    }
                }

                Group #ChatPreviewList {
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                    Padding: (Full: 0, Top: 3);

                    Group #ChatPreviewItem {
                        LayoutMode: Top;
                    }
                }
            }

            Group #ChatView {
                FlexWeight: 1;
                LayoutMode: Top;

                Group {
                    FlexWeight: 1;
                    LayoutMode: Top;

                    Button {
                        LayoutMode: Top;
                        Anchor: (Height: 30);
                        Background: #203551;
                    }

                    Group {
                        FlexWeight: 1;
                        Background: #000000(0.2);

                        Label #ChatLabel {
                            Text: "No Chat selected";
                            FlexWeight: 1;
                            Style: (
                                FontSize: 18,
                                TextColor: #96a9be,
                                VerticalAlignment: Center,
                                HorizontalAlignment: Center,
                                RenderBold: true,
                                Wrap: true
                            );
                        }
                    }
                }
            }
        }
    }
}

$C.@BackButton {}