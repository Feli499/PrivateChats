$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
    Anchor: (Width: 1200, Height: 900);

    #Title{

        Group {
            Background: "../icon.png";
            Anchor: (Left: 10, Height:25, Width:25);
        }

        $C.@Title{
            @Text = "HyFe-Chats";
        }
    }

    Group {
        LayoutMode: Top;
        Anchor: (Top: 36);
        Padding: (Full: 10);

        Group #Buttons {
            LayoutMode: Left;
            Anchor: (Left: 0, Right: 0, Height: 45);
            Padding: (Full: 5);

            $C.@TextButton #CreateChat {
                Anchor: (Width: 200);
                Text: "Create Chat";
            }
        }

        Group #Content {
            LayoutMode: Left;
            FlexWeight: 1;

            Group {
                Anchor: (Width: 300);
                LayoutMode: Top;

                Button {
                    LayoutMode: Top;
                    Anchor: (Height: 30);
                    Background: #203551;

                    Label {
                        FlexWeight: 1;
                        Text: "Your Chats";
                        Style: (
                            FontSize: 22,
                            TextColor: #96a9be,
                            HorizontalAlignment: Center,
                            RenderBold: true
                        );
                    }
                }

                Group #ChatPreviewList {
                    LayoutMode: TopScrolling;
                    ScrollbarStyle: $C.@DefaultScrollbarStyle;
                    Padding: (Full: 0);

                    Group #ChatPreviewItem {
                        LayoutMode: Top;
                    }
                }
            }

            Group #ChatView {
                FlexWeight: 1;
                LayoutMode: Top;

                Label #ChatLabel{
                    Text: "No Chat selected";
                    FlexWeight: 1;
                    Style: (
                        FontSize: 18,
                        TextColor: #96a9be,
                        VerticalAlignment: Center,
                        HorizontalAlignment: Center,
                        RenderBold: true,
                        Wrap: true
                    );
                }
            }
        }
    }
}

$C.@BackButton {}