$C = "../Common.ui";

Group {
    Anchor: (Height: 50);

    Button #OpenChatButton {
        LayoutMode: Top;
        Background: $C.@InputBoxBackground;
        Padding: (Left:10);
        Style:  ButtonStyle(
            Sounds: $C.@ButtonSounds,
        );


        Label #ChatName {
            Style: (
                FontSize: 16,
                RenderBold: true,
                TextColor: #93844c
            );

            Text: "Name";
        }

        Label #MessagePreview {
            Style: (
                FontSize: 12,
                RenderBold: false,
                TextColor: #808080
            );

            Text: "Preview";
        }
    }
}