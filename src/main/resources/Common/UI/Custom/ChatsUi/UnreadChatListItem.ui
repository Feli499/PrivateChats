$C = "../Common.ui";

Group {
  Anchor: (Height: 50);

  Button #OpenChatButton {
    LayoutMode: Top;
    Anchor: (Top: 0, Bottom: 0);
    Padding: (Full: 10);
    Style: ButtonStyle(
      Sounds: $C.@ButtonSounds,
      Default: (Background: #263047),
      Hovered: (Background: #263047(0.8))
    );
    OutlineColor: #93844c;
    OutlineSize: 2;


    Label #ChatName {
      Style: (
        FontSize: 16,
        RenderBold: true,
        TextColor: #93844c,
        VerticalAlignment: Center
      );
      FlexWeight: 1;

      Text: "Name";
    }

    Label #MessagePreview {
      Style: (
        FontSize: 12,
        RenderBold: false,
        TextColor: #808080,
        VerticalAlignment: Center
      );
      FlexWeight: 1;
      Text: "Preview";
    }
  }
}