$C = "../Common.ui";

Group {
    FlexWeight: 1;
    LayoutMode: Top;

    Label #ChatName{
        Text: "Label #ChatName";
    }

    Group {
        Anchor: (Height: 50);
        LayoutMode: Left;

        TextField #NewMessage {
            Style: $C.@DefaultInputFieldStyle;
            Background: $C.@InputBoxBackground;
            FlexWeight: 1;
            PlaceholderText: "Write a message...";
        }

        $C.@TextButton #SendMessageButton {
            Anchor: (Width: 100, Right: 0);
            Text: "Send";
        }
    }

    Group {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
        Background: #000000(0.2);

        Group #MessageItem {
            LayoutMode: Top;
        }
    }
}