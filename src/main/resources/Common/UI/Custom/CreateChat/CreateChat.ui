$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 620, Height: 900);

  #Title {

    Group {
      Background: "../icon.png";
      Anchor: (Left: 10, Height:25, Width:25);
    }

    $C.@Title {
      @Text = "Create Chat";
    }
  }

  Group {
    LayoutMode: Top;
    FlexWeight: 1;
    Anchor: (Top: 36);

    Label {
      Text: "Create a chat by selecting a player from belows list.";
      Style: (
        FontSize: 18,
        TextColor: #adc3ff,
        VerticalAlignment: Center,
        RenderBold: true
      );
    }

    TextField #SearchPlayerName {
      Anchor: (Height: 50);
      Style: $C.@DefaultInputFieldStyle;
      Background: $C.@InputBoxBackground;
      PlaceholderText: "Search for player...";
    }


    Group {
      Padding: (Full: 10);
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      Group #PlayerItems {
        LayoutMode: Top;
      }
    }

    $C.@TextButton #CreateChatButton {
      Anchor: (Width: 600);
      Text: "Create";
    }
  }
}

$C.@BackButton {}