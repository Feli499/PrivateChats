$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 630, Height: 900);

  #Title {

    Group {
      Background: "../icon.png";
      Anchor: (Left: 10, Height:25, Width:25);
    }

    $C.@Title {
      @Text = "Create Chat";
    }
  }

  Group {
    LayoutMode: Top;
    FlexWeight: 1;
    Padding: (Left: 5, Right: 5);
    Anchor: (Top: 36, Bottom: 8);

    Label {
      Text: "Create a chat by selecting a player from belows list.";
      Style: (
        FontSize: 18,
        TextColor: #96a9be,
        VerticalAlignment: Center,
        HorizontalAlignment: Center,
        RenderBold: true
      );
      Anchor: (Right: 0, Left: 0);
      Padding: (Top: 10, Bottom: 10);
    }

    TextField #SearchPlayerName {
      Anchor: (Height: 50);
      PlaceholderText: "Search for player...";
      Padding: (Left:5);
      PlaceholderStyle: (
        FontSize: 14,
        TextColor: #424a5e(0.6)
      );
      Style: (
        FontSize: 14,
        TextColor: #ffffff
      );
      OutlineColor: #424a5e;
      OutlineSize: 2;
    }


    Group {
      Padding: (Full: 10);
      FlexWeight: 1;
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;

      Group #PlayerItems {
        LayoutMode: Top;
      }
    }

    Button #CreateChatButton {
      Anchor: (Height: 50, Right: 0);
      Style: ButtonStyle(
        Sounds: $C.@ButtonSounds,
        Hovered: (Background: #263047(0.8))
      );
      Background: #263047;
      OutlineColor: #424a5e;
      OutlineSize: 2;

      Label {
        FlexWeight: 1;
        Style: (
          FontSize: 22,
          TextColor: #96a9be,
          HorizontalAlignment: Center,
          VerticalAlignment: Center,
          RenderBold: true
        );
        Text: "Create chat";
      }
    }
  }
}

$C.@BackButton {}