$C = "../Common.ui";

Group {
    Anchor: (Height: 50, Width: 600/2);
    Padding: (Bottom: 5, Right: 5);

    Button {
        LayoutMode: Left;
        Background: $C.@InputBoxBackground;
        Padding: (Left:10);
        Style:  ButtonStyle(
            Sounds: $C.@ButtonSounds,
        );

        $C.@CheckBox #IsSelected {
            Value: false;
        }

        Label #PlayerName {
            Anchor: (Right: 30, Left: 11);
            Style: (
                FontSize: 18,
                TextColor: #ffffff,
                VerticalAlignment: Center,
                RenderBold: true
            );

            Text: "Label #PlayerName";
        }
    }
}